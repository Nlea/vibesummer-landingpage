---
import SummerBackground from './SummerBackground.astro';
import vibeSummerLogo from '../assets/vibeSummer-Logo.svg';
import VibeGoose from '../assets/vibeGoose.svg';
import fiberplaneLogo from '../assets/fiberplane-logo.svg';
import cloudflareLogo from '../assets/cloudflare-logo.svg';
---
<section class="hero">
    <SummerBackground />
    <div class="hero-content">
        <div class="title-container">
            <img src={vibeSummerLogo.src} alt="Vibe Summer" class="vibe-summer-logo" />
            <p class="by-text">by</p>
            <div class="sponsor-logos">
                <a href="https://fiberplane.com" target="_blank" rel="noopener noreferrer" class="sponsor-link">
                    <img src={fiberplaneLogo.src} alt="Fiberplane" class="sponsor-logo" />
                </a>
                <a href="https://cloudflare.com" target="_blank" rel="noopener noreferrer" class="sponsor-link">
                    <img src={cloudflareLogo.src} alt="Cloudflare" class="sponsor-logo" />
                </a>
            </div>
        </div>
        <h2>Four weeks of vibe coding challenges</h2>
        <p>27th July - 3rd August 2025</p>
        <div class="hero-cta">
            <div class="button-wrapper">
                <a href="https://discord.gg/RsUJvUXAGZ" class="primary-button">Join Discord</a>
                <a href="#challenges" class="secondary-button">View Schedule</a>
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        min-height: clamp(600px, 80vh, 900px);
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: clamp(4rem, 10vh, 8rem);
        background: transparent;
        color: rgb(51, 51, 51);
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        z-index: 2;
        text-align: center;
        max-width: 600px;
        width: 90%;
    }

  

    .title-container {
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .by-text {
        font-size: 1.2rem;
        margin: 0.5rem 0;
    }

    .sponsor-logos {
        display: flex;
        justify-content: center;
        gap: 2rem;
        align-items: center;
    }

    .sponsor-link {
        display: inline-block;
        transition: transform 0.2s ease;
    }

    .sponsor-link:hover {
        transform: scale(1.05);
    }

    .sponsor-logo {
        height: 30px;
        width: auto;
    }

    .vibe-summer-logo {
        width: 100%;
        max-width: 400px;
        height: auto;
        margin: 0 auto;
    }

    .highlight {
        background: linear-gradient(to right, rgb(92, 248, 7),rgb(19, 74, 0));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-cta {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
    }

    .primary-button, .secondary-button {
        padding: 1rem 2rem;
        border-radius: 0;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        outline: none;
    }

    .button-wrapper {
        display: flex;
        gap: 1rem;
    }

    .primary-button, .secondary-button {
        background: white;
        color: #FF20F8;
        font-weight: 600;
        border: 1px solid #FF20F8;
    }

    .primary-button:hover, .secondary-button:hover {
        background: radial-gradient(50% 50% at 50% 50%, #BA7BF0 0%, #E32DCF 53.37%, #FF959D 100%);
        color: black;
        border: none
    }


    .hero-graphics {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1;
    }

    .prize-preview {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 1.5rem;
        border-radius: 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
    }

    .prize-tag {
        font-size: 1rem;
        opacity: 0.8;
    }

    .prize-amount {
        font-size: 3rem;
        font-weight: 800;
        margin: 0.5rem 0;
    }

    .prize-detail {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .hero {
            flex-direction: column;
            text-align: center;
            padding: 4rem 1rem;
        }

        h1 {
            font-size: 3rem;
        }

        .hero-graphics {
            position: relative;
            transform: none;
            top: 2rem;
            margin-top: 2rem;
        }

        .hero-cta {
            justify-content: center;
        }
    }
</style>
