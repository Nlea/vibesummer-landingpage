---
import SummerBackground from './SummerBackground.astro';
import vibeSummerLogo from '../assets/vibeSummer-Logo.svg';
import VibeGoose from '../assets/vibeGoose.svg';
import fiberplaneLogo from '../assets/fiberplane-logo.svg';
import cloudflareLogo from '../assets/cloudflare-logo.svg';
---
<section class="hero">
    <SummerBackground />
    <div class="hero-content">
        <div class="title-container">
            <img src={vibeSummerLogo.src} alt="Vibe Summer" class="vibe-summer-logo" />
        </div>
         <p>30th July - 27th August 2025</p>
        <h2>Four weeks of vibe coding challenges</h2>
        <p class="by-text">by</p>
        <div class="sponsor-logos">
            <a href="https://fiberplane.com" target="_blank" rel="noopener noreferrer" class="company-link">
                <img src={fiberplaneLogo.src} alt="Fiberplane" class="sponsor-logo" />
            </a>
            <a href="https://cloudflare.com" target="_blank" rel="noopener noreferrer" class="company-link">
                <img src={cloudflareLogo.src} alt="Cloudflare" class="sponsor-logo" />
            </a>
        </div>
       
    <div class="fixed-buttons">
        <a href="https://discord.gg/RsUJvUXAGZ" class="primary-button">Join Discord</a>
        <a href="#challenges" class="secondary-button">View Schedule</a>
    </div>
    </div>
</section>

<style>
    .hero {
        min-height: clamp(400px, 60vh, 700px);
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: clamp(4rem, 10vh, 8rem);
        background: transparent;
        color: rgb(51, 51, 51);
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        z-index: 2;
        text-align: center;
        max-width: 600px;
        width: 90%;
    }

    .hero-content p:first-of-type {
        margin-top: 1rem;
        color: black;
    }

    @media (max-width: 768px) {
        .hero-content p:first-of-type {
            margin-top: 6rem;
            color: black;
        }
    }

  

    .title-container {
        position: fixed;
        top: 2rem;
        left: 2rem;
        z-index: 10;
    }

    .by-text {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .sponsor-logos {
        display: flex;
        justify-content: center;
        gap: 2rem;
        align-items: center;
    }

    .company-link {
        display: inline-block;
        transition: transform 0.2s ease;
    }

    .company-link:hover {
        transform: scale(1.05);
    }

    .sponsor-logo {
        height: 30px;
        width: auto;
    }

    .vibe-summer-logo {
        width: auto;
        height: 50px;
        margin: 0;
    }


    .fixed-buttons {
        position: fixed;
        top: 2rem;
        right: 2rem;
        display: flex;
        gap: 1rem;
        z-index: 10;
    }

    .primary-button, .secondary-button {
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        outline: none;
    }

    .primary-button {
        width: 150px;
        height: 36px;
        opacity: 1;
        padding-top: 6px;
        padding-right: 20px;
        padding-bottom: 6px;
        padding-left: 20px;
        border-radius: 123px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #FF20F8;
        color: white;
        font-family: Doto;
        font-weight: 900;
        font-style: Black;
        font-size: 18px;
        line-height: 25px;
        letter-spacing: -0.02em;
    }


    .secondary-button {
        width: 160px;
        height: 36px;
        opacity: 1;
        gap: 6px;
        border-radius: 3px;
        padding-top: 6px;
        padding-right: 20px;
        padding-bottom: 6px;
        padding-left: 20px;
        border-width: 1px;
        border-style: solid;
        border-color: #FF20F8;
        background: #FFE3FE;
        color: #FF20F8;
        font-family: Doto;
        font-weight: 900;
        font-style: Black;
        font-size: 20px;
        line-height: 25px;
        letter-spacing: -0.02em;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .secondary-button:hover {
        background: #FF20F8;
        color: #FFE3FE;
        border: none
    }

    .primary-button:hover {
        background: white;
        color: #FF20F8;
    }


    .hero-graphics {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1;
    }

    .prize-preview {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 1.5rem;
        border-radius: 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
    }

    .prize-tag {
        font-size: 1rem;
        opacity: 0.8;
    }

    .prize-amount {
        font-size: 3rem;
        font-weight: 800;
        margin: 0.5rem 0;
    }

    .prize-detail {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .hero {
            flex-direction: column;
            text-align: center;
            padding: 7rem 1rem 4rem;
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }

        h1 {
            font-size: 3rem;
        }

        .hero-graphics {
            position: relative;
            transform: none;
            top: 2rem;
            margin-top: 2rem;
        }

        .fixed-buttons {
            top: 5.5rem;
            right: 50%;
            transform: translateX(50%);
            gap: 0.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .title-container {
            position: fixed;
            top: 1rem;
            left: 50%;
            transform: translateX(-50%);
            z-index: 11;
        }

        .vibe-summer-logo {
            height: 50px;
        }

        .primary-button, .secondary-button {
            width: 130px;
            height: 32px;
            font-size: 16px;
            padding: 4px 16px;
        }
    }
</style>
