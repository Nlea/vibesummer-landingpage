---
import { Image } from 'astro:assets';
import vibeGoose from '../assets/vibeGoose.svg';
---
<section class="features" style="position: relative; z-index: 1;">
  <div class="feature-grid">
    <div class="feature-card" style="position: relative;">
      <Image src={vibeGoose} alt="VibeGoose" class="vibe-goose" width={60} height={77} />
      <h3>4</h3>
      <p>Weeks & Challenges</p>
    </div>
    
    <div class="feature-card">
      <h3>24/7</h3>
      <p>Community Support</p>
    </div>
    
    <div class="feature-card">
      <h3>Weekly</h3>
      <p>Live Streams</p>
    </div>
    
    <div class="feature-card">
      <h3>âˆž</h3>
      <p>Summer Vibes</p>
    </div>
  </div>
</section>

<style>
  .features {
    padding: 4rem 2rem;
    background-color: transparent;
    position: relative;
    z-index: 1;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 0.3rem; 
    border: 4px solid rgba(255, 255, 255, 0.5);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
    text-align: center;
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .feature-card h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.15rem;
    line-height: 1;
  }

  .feature-card p {
    margin: 0;
  }

  .feature-card:hover {
    transform: translateY(-5px);
  }



  @media (max-width: 768px) {
    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
  }

  .vibe-goose {
    position: absolute;
    width: 60px;
    height: auto;
    left: -1px;
    top: -60px;
    z-index: 0;
  }
</style>
