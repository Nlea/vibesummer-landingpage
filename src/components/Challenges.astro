---
import trophyIcon from '../assets/trophy-icon.svg';
import placeholderLogo from '../assets/placeholder-logo.svg';
import vibeGoose from '../assets/vibeGoose.svg';
import { Image } from 'astro:assets';
---
<section id="challenges" class="challenges" style="position: relative; z-index: 1;">
   <h2> Weekly Challenges</h2>
    <p>Four weeks of creative exploration with amazing partners!</p>
    <div class="challenge-grid">
        <div class="challenge-card">
            <div class="card-content">
                <h4>Challenge 1</h4>
                <p>July 30th - August 6th</p>
                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 1 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="https://github.com/Nlea/Vibe-Summer/tree/main/challenge1" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
        <div class="challenge-card" style="position: relative;">
            <Image src={vibeGoose} alt="VibeGoose" class="challenge-goose" width={60} height={77} />
            <div class="card-content">
                <h4>Challenge 2</h4>
                <p>August 6th - August 13th</p>
                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 2 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="https://github.com/Nlea/Vibe-Summer/tree/main/challenge2" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
        <div class="challenge-card">
           
            <div class="card-content">
                <h4>Challenge 3</h4>
                <p>August 13th - August 20th</p>

                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 3 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="https://github.com/Nlea/Vibe-Summer/tree/main/challenge3" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
        <div class="challenge-card">
           
            <div class="card-content">
                <h4>Challenge 4</h4>    
                <p>August 20th - August 27th</p>
                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 4 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="https://github.com/Nlea/Vibe-Summer/tree/main/challenge4" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .challenges {
        padding: 4rem 2rem;
        background: transparent;
    }



    .challenge-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .challenge-card {
        background: rgba(255, 255, 255, 0.4);
        border-radius: 1px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        position: relative;
    }

    .challenge-card:hover {
        transform: translateY(-5px);
    }


    .card-content {
        padding: 2rem;
    }
  
   

    .challenge-actions {
        display: flex;
        gap: 10px;
        margin-top: 1.5rem;
        justify-content: center;
    }

    .view-btn, .submit-btn {
        width: 140px;
        height: 55px;
        padding: 0 10px;
        border-radius: 2px;
        text-decoration: none;
        font-family: 'Inter Tight', sans-serif;
        font-weight: 500;
        font-style: normal;
        font-size: 16px;
        line-height: 55px;
        letter-spacing: 0;
        text-align: center;
        transition: all 0.2s ease;
        opacity: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
    }

    .view-btn, .submit-btn {
        color:rgb(0, 0, 0);
        background: #FFCDFF;

    }

    .view-btn:hover, .submit-btn:hover {
        transform: translateY(-2px);
        background: #FF20F8;
        color: white;
    }

    .partner-section {
        margin: 1rem 0;
        text-align: center;
    }

    .partner-logo {
        max-width: 120px;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    .trophy-icon {
        width: 32px;
        height: 32px;
        margin: 0 auto 0.75rem;
        display: block;
    }

    .prize-badge {
        text-align: center;
        margin: 1.5rem 0;
    }

    .prize-badge span {
        display: block;
        line-height: 1.4;
    }





    .challenge-goose {
        position: absolute;
        width: 60px;
        height: auto;
        right: -1px;
        top: -60px;
        z-index: 2;
    }

    @media (max-width: 768px) {
        .challenges {
            padding: 3rem 1rem;
        }

        h2 {
            font-size: 2rem;
        }

        .challenge-grid {
            grid-template-columns: 1fr;
        }

        .rewards-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
            max-width: 400px;
        }

        .challenge-card {
            margin: 0 auto;
            width: 100%;
        }
    }
</style>
