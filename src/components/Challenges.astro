---
import trophyIcon from '../assets/trophy-icon.svg';
import placeholderLogo from '../assets/placeholder-logo.svg';
---
<section id="challenges" class="challenges" style="position: relative; z-index: 1;">
   <h2> Weekly Challenges</h2>
    <p>Four weeks of creative exploration with amazing partners!</p>
    <div class="challenge-grid">
        <div class="challenge-card">
            <div class="card-content">
                <h3>Challenge 1</h3>
                <h4>July 30th - August 6th</h4>
                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 1 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="#" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
        <div class="challenge-card">
            <div class="card-content">
                <h3>Challenge 2</h3>
                <h4>August 6th - August 13th</h4>
                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 2 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="#" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
        <div class="challenge-card">
           
            <div class="card-content">
                <h3>Challenge 3</h3>
                <h4>August 13th - August 20th</h4>

                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 3 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="#" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
        <div class="challenge-card">
           
            <div class="card-content">
                <h3>Challenge 4</h3>    
                <h4>August 20th - August 27th</h4>
                <div class="partner-section">
                    <p>Together with:</p>
                    <img src={placeholderLogo.src} alt="Partner 4 Logo" class="partner-logo" />
                </div>
                <p>New challenge revealed soon!</p>
                <div class="prize-badge">
                    <img src={trophyIcon.src} alt="Trophy" class="trophy-icon" />
                    <span>€100</span>
                    <span>Amazon voucher</span>
                </div>
                <div class="challenge-actions">
                    <a href="#" class="view-btn">View Challenge</a>
                    <a href="#" class="submit-btn">Submit Challenge</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .challenges {
        padding: 4rem 2rem;
        background: transparent;
    }



    .challenge-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .challenge-card {
        background: rgba(255, 255, 255, 0.4);
        border-radius: 1px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        position: relative;
    }

    .challenge-card:hover {
        transform: translateY(-5px);
    }


    .card-content {
        padding: 2rem;
    }
  
   

    .challenge-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .view-btn, .submit-btn {
        flex: 1;
        padding: 0.75rem 1rem;
        border-radius: 0.3px;
        text-decoration: none;
        font-weight: 600;
        text-align: center;
        transition: all 0.2s ease;
    }

    .view-btn, .submit-btn {
        color:rgb(0, 0, 0);
        background: #CFF66B;
        border: 1px solid white;

    }

    .view-btn:hover, .submit-btn:hover {
        transform: translateY(-2px);
        background: #CFF66B;
        color: white;
    }

    .partner-section {
        margin: 1rem 0;
        text-align: center;
    }

    .partner-logo {
        max-width: 120px;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    .trophy-icon {
        width: 32px;
        height: 32px;
        margin: 0 auto 0.75rem;
        display: block;
    }

    .prize-badge {
        text-align: center;
        margin: 1.5rem 0;
    }

    .prize-badge span {
        display: block;
        line-height: 1.4;
    }





    @media (max-width: 768px) {
        .challenges {
            padding: 3rem 1rem;
        }

        h2 {
            font-size: 2rem;
        }

        .challenge-grid {
            grid-template-columns: 1fr;
        }

        .rewards-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
            max-width: 400px;
        }

        .challenge-card {
            margin: 0 auto;
            width: 100%;
        }
    }
</style>
