<div class="background-container">
    <div class="gradient-bg"></div>
    <!-- Reduced number of animated gradient orbs for better performance -->
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>

    <!-- Reduced number of sparkles and improved positioning -->
    <div class="sparkle sparkle-1"></div>
    <div class="sparkle sparkle-2"></div>
    <div class="sparkle sparkle-3"></div>
    <div class="sparkle sparkle-4"></div>
</div>

<style>
    .background-container {
        position: fixed;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: 0;
        background: linear-gradient(135deg, rgba(255, 253, 244, 0.95) 0%, rgba(255, 246, 235, 0.95) 100%);
        will-change: transform;
    }

    @media (prefers-reduced-motion: reduce) {
        .background-container * {
            animation: none !important;
            transition: none !important;
        }
    }

    .gradient-bg {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 50% 50%, rgba(46, 204, 113, 0.05) 0%, rgba(255, 255, 255, 0) 70%);
        opacity: 0.8;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(30px);
        animation: pulse 6s infinite;
        will-change: transform, opacity;
    }

    .orb-1 {
        top: 10%;
        left: 15%;
        width: clamp(10rem, 20vw, 15rem);
        height: clamp(10rem, 20vw, 15rem);
        background: linear-gradient(135deg, rgba(46, 204, 113, 0.2), rgba(39, 174, 96, 0.2));
        animation-delay: 0s;
    }

    .orb-2 {
        top: 30%;
        right: 20%;
        width: clamp(8rem, 15vw, 12rem);
        height: clamp(8rem, 15vw, 12rem);
        background: linear-gradient(135deg, rgba(46, 204, 113, 0.15), rgba(39, 174, 96, 0.15));
        animation-delay: 2s;
    }

    .orb-3 {
        bottom: 20%;
        left: 40%;
        width: clamp(12rem, 25vw, 18rem);
        height: clamp(12rem, 25vw, 18rem);
        background: linear-gradient(135deg, rgba(46, 204, 113, 0.1), rgba(39, 174, 96, 0.1));
        animation-delay: 4s;
    }

    .orb-4 {
        top: 50%;
        right: 33%;
        width: 14rem;
        height: 14rem;
        background: linear-gradient(to right, rgba(255, 223, 0, 0.3), rgba(255, 165, 0, 0.3));
        animation-delay: 3s;
    }

    .orb-5 {
        top: 70%;
        left: 60%;
        width: 8rem;
        height: 8rem;
        background: linear-gradient(to right, rgba(255, 192, 203, 0.35), rgba(255, 105, 180, 0.35));
        animation-delay: 2.5s;
    }

    .orb-6 {
        top: 20%;
        left: 40%;
        width: 16rem;
        height: 16rem;
        background: linear-gradient(to right, rgba(255, 140, 0, 0.2), rgba(255, 215, 0, 0.2));
        animation-delay: 1.5s;
    }

    .sparkle {
        position: absolute;
        border-radius: 50%;
        animation: ping 3s infinite;
    }

    .sparkle-1 {
        top: 25%;
        left: 50%;
        width: 0.5rem;
        height: 0.5rem;
        background: rgba(255, 215, 0, 0.9);
        animation-delay: 0.5s;
    }

    .sparkle-2 {
        top: 75%;
        left: 25%;
        width: 0.25rem;
        height: 0.25rem;
        background: rgba(255, 182, 193, 0.9);
        animation-delay: 1.5s;
    }

    .sparkle-3 {
        top: 33%;
        right: 25%;
        width: 0.375rem;
        height: 0.375rem;
        background: rgba(135, 206, 235, 0.9);
        animation-delay: 2.5s;
    }

    .sparkle-4 {
        top: 45%;
        left: 35%;
        width: 0.3rem;
        height: 0.3rem;
        background: rgba(255, 140, 0, 0.9);
        animation-delay: 0.7s;
    }

    .sparkle-5 {
        top: 65%;
        right: 40%;
        width: 0.4rem;
        height: 0.4rem;
        background: rgba(255, 223, 0, 0.9);
        animation-delay: 1.8s;
    }

    .sparkle-6 {
        top: 15%;
        right: 45%;
        width: 0.35rem;
        height: 0.35rem;
        background: rgba(255, 105, 180, 0.9);
        animation-delay: 3.2s;
    }

    .sparkle-7 {
        top: 85%;
        right: 15%;
        width: 0.45rem;
        height: 0.45rem;
        background: rgba(255, 165, 0, 0.9);
        animation-delay: 2.1s;
    }

    .sparkle-8 {
        top: 5%;
        left: 65%;
        width: 0.3rem;
        height: 0.3rem;
        background: rgba(255, 215, 0, 0.9);
        animation-delay: 1.2s;
    }

    @keyframes pulse {
        0% {
            opacity: 0.3;
            transform: scale(1);
        }
        50% {
            opacity: 0.5;
            transform: scale(1.05) translateY(-1%);
        }
        100% {
            opacity: 0.3;
            transform: scale(1);
        }
    }

    @keyframes ping {
        0% {
            transform: scale(0.2) translateY(0);
            opacity: 0.6;
        }
        50% {
            transform: scale(1.5) translateY(-10px);
            opacity: 0.3;
        }
        100% {
            transform: scale(0.2) translateY(0);
            opacity: 0.6;
        }
    }
</style>
