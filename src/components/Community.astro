<section class="community-section" style="position: relative; z-index: 1;">
    <h2>Join our community<h2>
    <div class="button-container">
        <a href="https://discord.gg/RsUJvUXAGZ" class="discord-button">
            Join Discord
        </a>
    </div>
</section>

<style>
    .community-section {
        padding: 4rem 2rem;
        background: transparent;
    }


    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    .discord-button {
        background: rgba(255, 255, 255, 0.8);
        color: #FF20F8;
        padding: 1rem 2rem;
        border-radius: 1px;
        text-decoration: none;
        font-weight: 600;
        border: 2px solid #FF20F8;
        transition: all 0.3s ease;
    }

    .discord-button:hover {
        background: #FF20F8;
        color: black;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .community-section {
            padding: 3rem 1rem;
        }

    }
</style>
