<section class="community-section" style="position: relative; z-index: 1;">
    <div class="section-title">
        <span class="grey">JOIN OUR</span> <span class="neon">COMMUNITY</span>
    </div>
    <div class="button-container">
        <a href="#" class="discord-button">
            Join our Discord
        </a>
    </div>
</section>

<style>
    .community-section {
        padding: 4rem 2rem;
        background: transparent;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 2rem;
    }

    .section-title .grey {
        color: rgb(120, 122, 120);
    }

    .section-title .neon {
        color: #39ff14;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    .discord-button {
        background: rgba(57, 255, 20, 0.1);
        color: #39ff14;
        padding: 1rem 2rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        border: 2px solid #39ff14;
        transition: all 0.3s ease;
    }

    .discord-button:hover {
        background: #39ff14;
        color: black;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .community-section {
            padding: 3rem 1rem;
        }

        .section-title {
            font-size: 2rem;
        }
    }
</style>
