<style>

	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		overflow-x: hidden;
		font-family: var(--font-body);
	}

	main {
		position: relative;
		z-index: 1;
		width: 100%;
		background: transparent;
	}
	


